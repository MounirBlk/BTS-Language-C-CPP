#include<stdio.h>
#include<stdlib.h>

#define N 8

/*Prototypes*/
void saisieTab(float note[N]);
float sommeTab(float note[N]);
void AfficheTab(float Affichage);

int main (void){
  int i;
  float note[N],Affichage;
  
  saisieTab(note);
  Affichage=sommeTab(note);
  AfficheTab(Affichage);
  return EXIT_SUCCESS;
}

/*sommeTab*/
float sommeTab(float note[N]){
  float somme;
  int i;
  somme = 0;
  for(i=0;i<N;i++){
    somme=somme+note[i];
  }
}

/*saisieTab*/
void saisieTab(float note[N]){
  int i;
  for(i=0;i<N;i++){                                      
    printf("Veuiller saisir votre note nÂ°%d :",i+1);
    scanf("%f",&note[i]);
    
  }
}

/*AffichageTab*/
void AfficheTab(float Affichage){
  printf("\nLa somme des notes est %.2f",Affichage);
  printf("\nLa moyenne des notes est %.2f\n",Affichage/N);

}
